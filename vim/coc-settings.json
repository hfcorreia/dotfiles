{
  "snippets.userSnippetsDirectory": "~/.dotfiles/vim/snippets/",
  "snippets.ultisnips.directories": [
    "~/.dotfiles/vim/snippets/"
  ],
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 3,
  "suggest.triggerAfterInsertEnter": true,
  "markdownlint.onOpen": false,
  "markdownlint.onSave": true,
  "markdownlint.onChange": false,
  "markdownlint.config": { "line-length": false },
  "coc.source.dictionary.enable": true,
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.definitions": true
}
